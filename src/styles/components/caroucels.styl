.fix--v-slide-group
  .theme--light.v-icon.v-icon.v-icon--disabled
    color: var(--v-primary-lighten5) !important

  .v-slide-group__wrapper
    order: 0
    margin-bottom: 0px
    width: 100%
  .v-slide-group__prev
    order: 1
    i
      color: var(--v-secondary-base) !important
  .v-slide-group__next
    order: 1
    i
      color: var(--v-secondary-base) !important

.fix-caroucel-cards
  height: 690px !important
  .v-window__container
    .v-window-item
      .v-carousel__item 
        height: 700px !important
    .v-window__prev
      opacity 1 !important
      width: 60px
      height: 60px
      border-radius: 15px
      position: absolute !important
      top: calc(103px - -479px) !important
      background-color: var(--v-secondary-base)
      button
        width: 100%
        height: 100%
        i
          color: var(--v-primary-text)
    .v-window__next
      opacity 1 !important
      width: 60px
      height: 60px
      border-radius: 15px
      position: absolute !important
      top: calc(103px - -479px) !important
      background-color: var(--v-secondary-base)
      button
        width: 100%
        height: 100%
        i
          color: var(--v-primary-text)
